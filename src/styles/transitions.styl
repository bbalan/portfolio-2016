// paragraph copy, headers, etc
#intro > *,
#desc > *,
#contact > *,
#project h2,
#project a,
.agency,
#tech li
        transition all speed ease-in-out
        transform-origin left center

        .transition-out &
            opacity 0
            transform translate3d(30px,0,0)

        .transition-hidden &
            opacity 0
            transform translate3d(-30px,0,0) scale(1)
            transition all 0s !important

        .transition-in &
            opacity 1
            transform none
            transition-timing-function ease-out

        for i in (1..20)
            .transition-out &,
            .transition-hidden &,
            .transition-in &
                &:nth-child({i})
                    transition all 0.2s ((i - 1) * stagger + contentDelay)

#contact > *
    for i in (1..20)
        &:nth-child({i})
            transition all 0.2s ((i - 1) * stagger + gridDelay)
    
// force hide text containers
#intro,
#project
    .transition-out &,
    .transition-hidden &,
    .transition-in &
        transition all speed 0.5s ease-in-out

    .transition-out &
        opacity 0

    .transition-hidden &
        opacity 0
        transition all speed

    .transition-in &
        opacity 1
        transition all speed

#content > h2 // "work", "more work"

    transition all speed 0.4s ease-in-out
    transform-origin left center

    .transition-out &
        opacity 0
        transform translate3d(30px,0,0)

    .transition-hidden &
        opacity 0
        transform translate3d(-30px,0,0)

    .transition-in &
        opacity 1
        transform none
        transition-timing-function ease-out

.info
    .transition-out &,
    .transition-hidden &,
    .transition-in &
        pointer-events none
        opacity 0

#screenshots *
    transition all 0.4s 0.5s

    .transition-out &
        opacity 0
        transform translate3d(30px,0,0)
        transition all 0.4s 0.5s !important

    .transition-hidden &
        opacity 0
        transform translate3d(-30px,0,0)
        transition all 0.4s 0.5s !important

    .transition-in &
        opacity 1
        transform none
        transition-timing-function ease-out
        transition all 0.4s 0.5s !important

#tris
    transition all 2s !important
    .transition-first &
        opacity 0
