speed        = 0.2s
stagger      = 0.05s
logoDelay    = 0.1s
contentDelay = 0.3s
gridDelay    = 0.2s
gridStagger  = 0.05s

.transition-hidden *
    transition all 0s !important

body #scroll #wrapper .transition-now
    transition-delay 0s !important

#header
    h1
        transition all 0.2s logoDelay
    span
        transition all 0.2s (logoDelay + 0.05s)

    h1, span
        transform-origin left center
        .transition-out &
            opacity 0
            transform translate3d(30px,0,0)

        .transition-hidden &
            opacity 0
            transform translate3d(-30px,0,0) scale(1)

        .transition-in &
            opacity 1
            transform none
            transition-timing-function ease-out
