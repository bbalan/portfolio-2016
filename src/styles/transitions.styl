.grid-link
    .transition-out &
        .logo-wrapper
            opacity 0
            transform perspective(500px) scale(0.9)
            transform-origin center center
        .line-wrapper
            opacity 0
        .bg-wrapper
            opacity 0
        
    .transition-hidden &
        .logo-wrapper
            opacity 0
            transition all 0s
            transform perspective(500px) scale(0.9)
            transform-origin center center
        .line-wrapper
            opacity 0
        .bg-wrapper
            opacity 0
        
    .transition-in &
        .logo-wrapper
            opacity 1
            transform none
            transform-origin center center
        .line-wrapper
            opacity 0.2
        .bg-wrapper
            opacity 1

    for i in (1..9)
        &:nth-child({i})
            .logo-wrapper
                transition all 0.2s ((i - 1) * gridStagger + gridDelay)
            .bg-wrapper
                transition all 0.2s ((i - 1) * gridStagger + gridDelay) ease-in

.transition-out .grid-link
    for i in (1..9)
        &:nth-child({i})
            *
                transition all 0.2s ((i - 1) * gridStagger) !important
                
